{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RingtoneInput",
  "type": "object",
  "required": ["ringtone_type", "duration_seconds", "intensity"],
  "properties": {
    "ringtone_type": {"type": "string"},
    "duration_seconds": {"type": "number", "minimum": 0.5, "maximum": 30},
    "intensity": {"type": "number", "minimum": 0, "maximum": 1},
    "melodic": {"type": "number", "minimum": 0, "maximum": 1},
    "percussive": {"type": "number", "minimum": 0, "maximum": 1},
    "loop_seamless": {"type": "boolean"}
  }
}
