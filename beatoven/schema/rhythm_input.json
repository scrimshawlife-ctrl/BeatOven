{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RhythmInput",
  "type": "object",
  "required": ["density", "tension", "drift", "tempo", "length_bars"],
  "properties": {
    "density": {"type": "number", "minimum": 0, "maximum": 1},
    "tension": {"type": "number", "minimum": 0, "maximum": 1},
    "drift": {"type": "number", "minimum": 0, "maximum": 1},
    "tempo": {"type": "number", "minimum": 40, "maximum": 300},
    "length_bars": {"type": "integer", "minimum": 1}
  }
}
